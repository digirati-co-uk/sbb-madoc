#!/usr/bin/env bash

echo "Madoc server logs..."

while test $# -gt 0; do
  case "$1" in
    -l|--local)
        docker-compose -f ./madoc-server/docker-compose.yaml -f ./madoc-server/docker-compose.local.yaml logs -f --tail=50
      exit 0;
    shift
    ;;
  esac
done;

docker-compose -f ./madoc-server/docker-compose.yaml logs -f --tail=50
